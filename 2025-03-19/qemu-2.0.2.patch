+        exit(1);
+    }
+
+    if (args->initrd_filename) {
+        /* Map in the file. */
+        int fd = open(args->initrd_filename, O_RDONLY);
+        if (fd < 0) {
+            fprintf(stderr, "qemu -initrd: open %s: %s\n", args->initrd_filename,
