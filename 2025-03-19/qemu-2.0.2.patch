+static int qemu_emulate_hv_restart(CPUState *cs, struct kvm_run *run)
+{
+    TILECPU *cpu = TILE_CPU(cs);
+    CPUTileState *env = &cpu->env;
+    char cmdstr[256];
+    char argstr[256];
