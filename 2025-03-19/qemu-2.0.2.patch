+                                (SIM_CONTROL_DLOPEN                     \
+                                 | ((c) << _SIM_CONTROL_OPERATOR_BITS)))
+      DLPUTC ('0');
+      DLPUTC ('x');
+      DLPUTC ('0');
+      DLPUTC (':');
+      int i;
+      for (i = 0; ; i++) {
